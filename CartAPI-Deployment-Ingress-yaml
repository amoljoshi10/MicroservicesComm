apiVersion: v1
kind: Service
metadata:
  name: cartapi-svc
spec:
  type: ClusterIP
  selector:
    app: cartapi-svc
  ports:
  - port: 80
    name: http-port
    protocol: TCP
    targetPort: 4000

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: dep-cartapi
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cartapi-svc
  template:
    metadata:
      labels:
        app: cartapi-svc
    spec:
      containers:
      - name: cartapi
        image: MicroservicesIngressACR.azurecr.io/cartapi:#{Build.BuildId}#
        ports:
          - containerPort: 80
