apiVersion: v1
kind: Service
metadata:
  name: productapi
spec:
  type: ClusterIP
  selector:
    app: productapi
  ports:
  - port: 80
    name: http
    protocol: TCP
    targetPort: 4000

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: productapi
spec:
  selector:
    matchLabels:
      app: productapi
  template:
    metadata:
      labels:
        app: productapi
    spec:
      containers:
      - name: productapi
        image: MicroservicesIngressACR.azurecr.io/productapi:#{Build.BuildId}#
        ports:
          - containerPort: 80
